<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="32dp"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="275dp"
        android:layout_height="300dp"
        android:layout_margin="20dp"
        android:background="@drawable/vp_back">


        <androidx.cardview.widget.CardView
            app:cardCornerRadius="34dp"
            android:id="@+id/card_view_img_vp_item"
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="71dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/img_item_vp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/tv_title_vp_item"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginHorizontal="36dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="@string/title"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/card_view_img_vp_item"
            app:layout_constraintStart_toStartOf="@+id/card_view_img_vp_item"
            app:layout_constraintTop_toBottomOf="@+id/card_view_img_vp_item" />

        <TextView
            android:id="@+id/tv_count_vp_item"
            android:layout_width="170dp"
            android:layout_height="24dp"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="@string/_100_product"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="@+id/tv_title_vp_item"
            app:layout_constraintStart_toStartOf="@+id/tv_title_vp_item"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_vp_item" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>