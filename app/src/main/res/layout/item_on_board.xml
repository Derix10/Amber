<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_onboard_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/bc_first_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title_onboard_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="72dp"
        android:fontFamily="@font/dmsans_medium"
        android:text="Title"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/img_onboard_item" />

    <TextView
        android:id="@+id/tv_desc_onboard_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="45dp"
        android:layout_marginTop="14dp"
        android:fontFamily="@font/dmsans_medium"
        android:text="Description"
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_onboard_item" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_onboard_start_item"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="72dp"
        android:backgroundTint="@color/global_orange"
        android:drawableEnd="@drawable/ic_arrow_right"
        android:fontFamily="@font/dmsans_medium"
        android:text="get started"
        android:textSize="12dp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tv_desc_onboard_item" />

</androidx.constraintlayout.widget.ConstraintLayout>