<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.firebase.RegistFragment">


    <TextView
        android:id="@+id/tv_register"
        android:layout_width="305dp"
        android:layout_height="32dp"
        android:layout_marginTop="80dp"
        android:text="@string/regist"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:text="@string/email"
        android:layout_marginHorizontal="55dp"
        app:layout_constraintBottom_toTopOf="@+id/ed_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:drawableStart="@drawable/ic_mail"
        android:id="@+id/ed_email"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="48dp"
        android:layout_marginHorizontal="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_register" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:text="@string/name"
        android:layout_marginHorizontal="55dp"
        app:layout_constraintBottom_toTopOf="@+id/ed_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:drawableStart="@drawable/ic_person"
        android:id="@+id/ed_name"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="48dp"
        android:layout_marginHorizontal="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed_email" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:text="@string/password"
        android:layout_marginHorizontal="55dp"
        app:layout_constraintBottom_toTopOf="@+id/ed_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:drawableStart="@drawable/lock"
        android:drawableEnd="@drawable/ic_eye"
        android:id="@+id/ed_password"
        android:layout_width="match_parent"
        android:inputType="textPassword"
        android:layout_height="44dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="47dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed_name" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/tv_agree"
        android:layout_marginTop="46dp"
        app:layout_constraintTop_toBottomOf="@+id/ed_password" />


    <TextView
        android:layout_marginHorizontal="80dp"
        android:id="@+id/tv_agree"
        android:text="@string/confident"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed_password" />
    
    <Button
        android:id="@+id/btn_sign"
        android:drawableEnd="@drawable/ic_baseline_arrow_forward_24"
        android:text="@string/sign_up"
        android:backgroundTint="@color/orange"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="45dp"
        android:layout_height="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_agree"
        android:layout_marginTop="40dp" />
    
    <TextView
        android:text="@string/sign_in"
        android:textStyle="bold"
        android:id="@+id/sign_in"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_sign"
        android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>