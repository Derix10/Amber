<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.firebase.RegistFragment">


    <Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_regist"
        android:layout_width="305dp"
        android:layout_height="32dp"
        android:layout_marginTop="40dp"
        android:text="Регистрация"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <TextView
        android:layout_width="305dp"
        android:layout_height="16dp"
        android:text="Email"
        app:layout_constraintBottom_toTopOf="@+id/ed_mail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:drawableStart="@drawable/ic_mail"
        android:id="@+id/ed_mail"
        android:layout_width="305dp"
        android:layout_height="44dp"
        android:layout_marginTop="47dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_regist" />

    <TextView
        android:layout_width="305dp"
        android:layout_height="16dp"
        android:text="Имя"
        app:layout_constraintBottom_toTopOf="@+id/ed_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:drawableStart="@drawable/ic_person"
        android:id="@+id/ed_name"
        android:layout_width="305dp"
        android:layout_height="44dp"
        android:layout_marginTop="47dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed_mail" />

    <TextView
        android:layout_width="305dp"
        android:layout_height="16dp"
        android:text="Пароль"
        app:layout_constraintBottom_toTopOf="@+id/ed_pass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:drawableStart="@drawable/lock"
        android:drawableEnd="@drawable/ic_eye"
        android:id="@+id/ed_pass"
        android:layout_width="305dp"
        android:layout_height="44dp"
        android:layout_marginTop="47dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed_name" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/tv_agr"
        android:layout_marginTop="46dp"
        app:layout_constraintTop_toBottomOf="@+id/ed_pass" />


    <TextView
        android:layout_marginStart="67dp"
        android:layout_marginEnd="35dp"
        android:id="@+id/tv_agr"
        android:text="By creating an account, you agree to our
        Term and Conditions"
        android:textStyle="bold"
        android:layout_marginTop="54dp"
        android:layout_width="274dp"
        android:layout_height="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed_pass" />
    
    <Button
        android:id="@+id/btn_sign"
        android:drawableEnd="@drawable/ic_baseline_arrow_forward_24"
        android:text="Sign Up"
        android:backgroundTint="@color/orange"
        android:layout_width="305dp"
        android:layout_height="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_agr"
        android:layout_marginTop="36dp" />
    
    <TextView
        android:text="Already have an account? Sign in"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_width="305dp"
        android:layout_height="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_sign"
        android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>