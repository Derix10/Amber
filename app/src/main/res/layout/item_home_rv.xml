<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="210dp"
    android:layout_margin="30dp"
    app:cardElevation="11dp"
    app:cardCornerRadius="20dp"
    android:backgroundTint="#FAE7D6">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="24dp"
            android:id="@+id/card_view_home_rv_item"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="41dp"
            android:layout_marginBottom="104dp"
            android:layout_width="120dp"
            android:layout_height="120dp">

            <ImageView
                android:id="@+id/img_rv_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/tv_item_title_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="@string/title"
            android:maxLines="1"
            android:ellipsize="end"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/card_view_home_rv_item"
            app:layout_constraintStart_toStartOf="@+id/card_view_home_rv_item"
            app:layout_constraintTop_toBottomOf="@+id/card_view_home_rv_item" />

        <TextView
            android:id="@+id/tv_price_rv_item"
            android:layout_width="113dp"
            android:layout_height="20dp"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="@string/_1_600"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="@+id/tv_item_title_rv"
            app:layout_constraintStart_toStartOf="@+id/tv_item_title_rv"
            app:layout_constraintTop_toBottomOf="@+id/tv_item_title_rv" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>