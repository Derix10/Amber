<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="145dp"
        android:layout_height="210dp"
        android:layout_margin="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_item2_home"
                android:layout_width="117dp"
                android:layout_height="65dp"
                android:layout_marginTop="41dp"
                android:layout_marginBottom="104dp"
                android:background="@color/purple_200"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_beosound_1"
                android:layout_width="113dp"
                android:layout_height="24dp"
                android:layout_margin="40dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="@string/beosound_1"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/img_item2_home"
                app:layout_constraintStart_toStartOf="@+id/img_item2_home"
                app:layout_constraintTop_toBottomOf="@+id/img_item2_home" />

            <TextView
                android:id="@+id/tv_mani"
                android:layout_width="113dp"
                android:layout_height="20dp"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="@string/_1_600"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="@+id/tv_beosound_1"
                app:layout_constraintStart_toStartOf="@+id/tv_beosound_1"
                app:layout_constraintTop_toBottomOf="@+id/tv_beosound_1" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>